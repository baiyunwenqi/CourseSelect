<div class="container-fluid">
  <div class="col">
    <div class="col-sm-2">
      <%= render "shared/sidenav" %>

    </div>
    <div class="col-sm-10">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title">选修课程</h3>
        </div>
        <div class="panel-body" style="min-height: 450px">
          <table class="table table-striped table-hover">
            <thead>
              <!-- 从收藏夹导入-->
            <div class="panel panel-primary">
          <% if student_logged_in? %>
              <%= link_to "从收藏夹导入" ,from_f_courses_path,class: 'btn-sm btn-danger' , style: 'float:right;margin-top:10px;margin-right:60px'%>
          <% end%>
          </div>     
       <!-- 搜索课程-->            
       <%= form_tag '/courses/list' , :method => :get  do %>  
        <div class="field">
          <%= label_tag '课程名称'%>
          <%= text_field_tag :name , params[:name] %>
        </div>
        <div class="actions">
         <%= submit_tag "名称查询", class: 'btn-sm btn-info'  %>
        </div>
        <% end %>
      <br />
      <% if @course.empty? == true %>
        <div class="alert alert-danger">暂无该课程信息！</div>
      <% end %>
      <br />

            <tr>
              <th>课程编号</th>
              <th>课程名称</th>
              <th>课时/学分</th>
              <th>限选</th>
              <th>已选</th>
              <th>课程属性</th>
              <th>授课方式</th>
              <th>考试方式</th>
              <th>主讲教师</th>
              <!-- 显示上课时间 -->
              <th>上课时间</th>

            </tr>
            </thead>
            <tbody>

            <% @course.each do |course| %>
                <tr>

                  <td><%= course.course_code %></td>
                  <td><%= course.name %></td>
                  <!-- 显示学时/学分 -->
                 <td><%= course.period.to_s + "/" + course.credit.to_s %></td>
                  <td><%= course.limit_num %></td>
                   <!-- 显示已选人数 -->
                  <%
                      course.student_num=course.grades.where(:favorite=>"false").length
                  %>
                  <td><%= course.student_num %></td>
                  <td><%= course.course_type %></td>
                  <td><%= course.teaching_type %></td>
                  <td><%= course.exam_type %></td>
                  <td><%= course.teacher.name %></td>
                  <!-- 显示上课时间 -->
                  <%  strcoursetime="周"
                      intweek=course.course_time[1].to_i
                      if intweek==1
                        strcoursetime=strcoursetime +"一".to_s
                      elsif intweek==2
                        strcoursetime=strcoursetime +"二".to_s
                      elsif intweek==3
                        strcoursetime=strcoursetime +"三".to_s
                      elsif intweek==4
                        strcoursetime=strcoursetime +"四".to_s
                      elsif intweek==5
                        strcoursetime=strcoursetime +"五".to_s
                      elsif intweek==6
                        strcoursetime=strcoursetime +"六".to_s
                      else intweek==7
                        strcoursetime=strcoursetime +"七".to_s
                   end
                    strcoursetime =strcoursetime+"("
                    strcoursetime=strcoursetime+course.course_time[2..5]
                    strcoursetime=strcoursetime.insert(5,'-')
                    strcoursetime=strcoursetime+")"
                   %>
                  <td><%= strcoursetime %></td>
                   <% if course.limit_num.nil?|| course.student_num<course.limit_num %>
                  <td><%= link_to "加入课程", select_course_path(course), class: 'btn-sm btn-info' %></td>
                   <% else %>
                    <td class: 'btn-sm btn-info'>加入课程</td>
                    <% end %>

                </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>


